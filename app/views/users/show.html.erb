<title>Profile</title>

<style>
  .leftimg {
    float:left; /* Выравнивание по левому краю */
    margin: 7px 7px 7px 7px; /* Отступы вокруг картинки */
  }
</style>

<%= form_for current_user, htm: {multipart: true} do |f| %>
  <div class="panel panel-default">
    <div class="panel-heading">Profile</div>

    <div class="panel-body">
      <% for image in current_user.images %>
        <div class="leftimg">
          <%= image_tag image.image_url(:thumb) %><br>
        </div>
      <% end %>

      <p><br>
        <%= f.label :first_name %> :
        <%= current_user.first_name %><br>

        <%= f.label :last_name %> :
        <%= current_user.last_name %><br>

        <%= f.label :email %> :
        <%= current_user.email %><br>

        <%= f.label :birthday %> :
        <%= current_user.birthday %><br>
      </p>
    </div>
  </div>

  <p class="button"><%= link_to "Edit", edit_user_path, class: 'btn btn-lg btn-primary btn-block' %></p>
<% end %>
