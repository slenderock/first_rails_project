<h2>Profile</h2>
<%= form_for current_user do |f| %>
  <p>
    <%= f.label :first_name %> :
    <%= current_user.first_name %><br>
  </p>

  <p>
    <%= f.label :last_name %> :
    <%= current_user.last_name %><br>
  </p>

  <p>
    <%= f.label :email %> :
    <%= current_user.email %><br>
  </p>

  <p>
    <%= f.label :birthday %> :
    <%= current_user.birthday %><br>
  </p>

  <%= link_to "Edit", edit_user_path %>
<% end %>
